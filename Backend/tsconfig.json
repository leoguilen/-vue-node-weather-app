{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./server/dist",
    "rootDir": "./server",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/", "server/types/*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
